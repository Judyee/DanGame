<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery-3.7.1.min.js"></script>
<script>
    
    $.ajax({
        url: 'http://localhost:5000/api/app',
        type: 'GET',
        dataType: 'json',
        success: function (response) {

            var tagNameFriend = "遊戲庫"
            var tagnameAll = "所有";
            var tagname2 = "策略";
            var tagname3 = "角色扮演";
            $('#tagname2').append(tagname2);
            $('#tagname3').append(tagname3);
            $('#tagnameFriend').append(tagNameFriend);
            $('#tagnameAll').append(tagnameAll);

            response.forEach(function (app) {
                var slide = `
                            <swiper-slide>
                                <div class="card" style="height: 315px;">
                                    <img src="${app.headerImage}" class="card-img-top" alt="${app.appName}">
                                    <div class="card-body">
                                        <h5 class="card-title">${app.appName}</h5>
                                        <div style="position:absolute; bottom: 10px; left: 15px;">
                                                <button class="btn btn-secondary" onclick="window.open('/Game/${app.appId}')">
                                                詳細資訊
                                            </button>
                                        </div>
                                        <div style="position:absolute; bottom: 10px; right: 15px;">
                                            <button class="btn btn-secondary float-end">
                                                <a href="" class="list-group-item-action">
                                                    <i class="bi bi-cart-plus check-button"></i>
                                                </a>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </swiper-slide>
                        `;

                // 添加到所有遊戲的容器
                $('.mySwiperAll').append(slide);

                // 檢查 tagId = 2 的標籤
                app.tags.forEach(function (tag) {
                    if (tag.tagId === 2) {
                        $('.mySwiper2').append(slide);
                    }
                });

                // 檢查 tagId = 3 的標籤
                app.tags.forEach(function (tag) {
                    if (tag.tagId === 3) {
                        $('.mySwiper3').append(slide);
                    }
                });
            });

        },
        error: function (error) {
            console.log('Error:', error);
        }
    });

    $(".check-button").on("click", function () {
        if (!alreadyLogin) {
            window.open('/User/Login?redirectTo=/Game/@(Model.detail.AppId)#game-action');
            return
        }
        if (!alreadyInShoppingCart) {
            $.ajax({

                url: "/API/User/ShoppingCart",
                method: "POST",
                data: JSON.stringify({ appId: @(Model.detail.AppId)}),
                contentType: 'application/json',

                success: function (res) {
                    $(".check-button").text("已加入購物車").css({
                        cursor: "default",
                        filter: "brightness(0.5)"
                    })
                    alreadyInShoppingCart = true;
                },
                error: function (err) { console.log(err) },
            });
        }
    })
    
</script>