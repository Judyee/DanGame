@model DanGame.Models.UserArticlesViewModel
@{
	ViewData["Title"] = "ForumUser";
}
<style>
	

	
	.frForumUserText {
		color: black;
		text-shadow: 2px 2px 4px white;
	}

	.frbghhh {
		position: relative; /* 確保文字可以相對於這個元素定位 */
		height: 300px;
		width: 100%;
		background-image: url(/img/frNight.webp);
		background-repeat: no-repeat;
		background-position: top;
		background-attachment: fixed;
	}

	.frbghhhAbsolute {
		position: absolute; /* 絕對定位 */
		top: 85%; /* 垂直居中 */
		left: 10%; /* 水平居中 */
	}

	.fixed-top > nav {
		background: none !important;
	}

	.background-editor {
		width: 80%;
		max-width: 900px;
		background-color: #fff;
		border-radius: 10px;
		overflow: hidden;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
		margin: 20px auto;
		position: fixed;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 1000;
	}

	.background-editor-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 10px 20px;
		background-color: #f5f5f5;
		border-bottom: 1px solid #ddd;
	}

		.background-editor-header span {
			font-size: 18px;
			font-weight: bold;
		}

	.close-btn {
		background: none;
		border: none;
		font-size: 20px;
		cursor: pointer;
	}

	.background-preview {
		position: relative;
		height: 200px;
		background-color: #eaeaea;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.selected-background {
		max-width: 100%;
		max-height: 100%;
	}

	.background-tabs {
		display: flex;
		overflow-x: auto;
		padding: 10px 20px;
		border-bottom: 1px solid #ddd;
		background-color: #f5f5f5;
	}

	.tab-btn {
		flex: none;
		padding: 5px 10px;
		margin-right: 10px;
		background-color: #fff;
		border: 1px solid #ddd;
		border-radius: 5px;
		cursor: pointer;
	}

		.tab-btn.active {
			background-color: #007bff;
			color: #fff;
			border-color: #007bff;
		}

	.background-options {
		display: flex;
		flex-wrap: wrap;
		padding: 20px;
		gap: 10px;
		justify-content: center;
	}

	.background-option {
		flex: 1 1 calc(33.333% - 20px);
		max-width: calc(33.333% - 20px);
		border: 1px solid #ddd;
		border-radius: 5px;
		overflow: hidden;
		cursor: pointer;
	}

		.background-option img {
			width: 100%;
			height: auto;
			display: block;
		}

	.apply-btn {
		display: block;
		width: 100%;
		padding: 10px;
		background-color: #007bff;
		color: #fff;
		border: none;
		border-radius: 0 0 10px 10px;
		cursor: pointer;
		font-size: 16px;
	}



	.popup {
		display: none;
		position: fixed;
		z-index: 1;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		overflow: auto;
		background-color: rgba(0, 0, 0, 0.5);
	}

	.popup-content {
		background-color: #fefefe;
		margin: 15% auto;
		padding: 20px;
		border: 1px solid #888;
		width: 80%;
		max-width: 600px;
	}

	.close {
		color: #aaa;
		float: right;
		font-size: 28px;
		font-weight: bold;
	}

		.close:hover,
		.close:focus {
			color: #000;
			text-decoration: none;
			cursor: pointer;
		}
</style>
<body>

	<div class="frbghhh" id="bg">
		<div class="frbghhhAbsolute container ">
			<div class="d-flex mb-3 ">
				<div>
					<img class="rounded-circle " style="width: 80px; height: 80px; object-fit: cover;" src="@Model.UserProfile.ProfilePictureUrl">
				</div>
				<div class="ms-3 w-100">
					<span class="text-light" style="font-size:large;">@Model.User.UserName</span>
					<div class="mt-4 ">
						<span class="text-secondary">@Model.Articles.Count</span>
						<span class="text-secondary">文章</span>
						<span class="text-secondary ms-2">@Model.Comments.Count</span>
						<span class="text-secondary">評論</span>
						<span class="text-secondary ms-2">@Model.Likes.Count</span>
						<span class="text-secondary">收藏</span>
						<span class="text-secondary ms-2">@Model.TotalLikesCounts</span>
						<span class="text-secondary">讚數</span>
						<span class="text-secondary ms-2">0</span>
						<span class="text-secondary">追蹤</span>
						<span class="text-secondary ms-2">0</span>
						<span class="text-secondary">粉絲</span>
					</div>
				</div>
				<div class="d-flex justify-content-end w-50">
					<div >
						<button class="btn mt-5 me-5 btn btn-dark" style="width:150px;">追蹤</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class=" mt-5 pb-5" style="background-color:#EEDFF3;">
		<div class="container">
			<div class="d-flex  m-auto ">
				<div class="shadow border border-1 w-100 m-auto mt-4 me-3 bg-white bg-opacity-75" style="border-radius:20px;">
					<div class="m-4 ">
						<ul class="nav nav-tabs" id="myTab" role="tablist">
							<li class="nav-item" role="presentation">
								<button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">文章</button>
							</li>
							<li class="nav-item" role="presentation">
								<button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">評論</button>
							</li>
							<li class="nav-item" role="presentation">
								<button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">收藏</button>
							</li>
						</ul>
						<div class="tab-content" id="myTabContent">
							<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

								@if (!Model.Articles.Any())
								{
									<div class="row justify-content-center">
										<img src="https://www.hoyolab.com/_nuxt/img/7ea569b.png" style="width:250px" />
										<div><p class="text-center">你還沒有已發表的內容喔!</p></div>

									</div>
								}
								else
								{


									@foreach (var item in Model.Articles)
									{

										<div class="row mb-2 mt-2">
											<div class="col-10 "><a asp-action="Artical" asp-route-id="@item.ArticalId" class="text-decoration-none"> @Html.DisplayFor(modelItem => item.ArticalTitle)</a></div>


										</div>
									}
								}
							</div>
							<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
								@if (!Model.Comments.Any())
								{
									<div class="row justify-content-center">
										<img src="https://www.hoyolab.com/_nuxt/img/2247615.png" style="width:250px" />
										<div><p class="text-center">你還沒有已評論的內容喔!</p></div>

									</div>
								}
								else
								{


									@foreach (var comment in Model.Comments)
									{
										<div class="row mb-2 mt-2">
											<div class="col-11 "><a asp-action="Artical" asp-route-id="@comment.ArticalId" class="text-decoration-none"> @Html.DisplayFor(modelItem => comment.CommentContent)</a></div>

											<div class="col-1"><a asp-action="" asp-route-id="@comment.CommentId" class="text-decoration-none">刪除</a></div>

										</div>
									}
								}
							</div>

							<div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
								@if (!Model.LikedArticles.Any())
								{
									<div class="row justify-content-center">
										<img src="https://www.hoyolab.com/_nuxt/img/2247615.png" style="width:250px" />
										<div><p class="text-center">你還沒有已收藏的內容喔!</p></div>
									</div>
								}
								else
								{
									@foreach (var articalLike in Model.LikedArticles)
									{
										<div class="row mb-2 mt-2">
											<div class="col-11 "><a asp-action="Artical" asp-route-id="@articalLike.ArticalId" class="text-decoration-none"> @Html.DisplayFor(modelItem => articalLike.ArticalTitle)</a></div>


										</div>
									}
								}

							</div>



						</div>
					</div>
				</div>

				<!-- 右側 -->
				<div class="m-1 p-1 w-25">


					<div class="mt-1  p-3 rounded ">

						<div class="card" style="width: 18rem;">
							<div class="card-header">
								誰追蹤你
							</div>
							<ul class="list-group list-group-flush">
								<li class="list-group-item"></li>
								<li class="list-group-item"></li>
								<li class="list-group-item"></li>
							</ul>
						</div>
					</div>
					<div class="mt-1  p-3 rounded ">

						<div class="card" style="width: 18rem;">
							<div class="card-header">
								我的粉絲
							</div>
							<ul class="list-group list-group-flush">
								<li class="list-group-item"></li>
								<li class="list-group-item"></li>
								<li class="list-group-item"></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
</body>