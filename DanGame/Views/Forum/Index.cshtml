﻿@* @model IEnumerable<DenGame.Models.ArticleList> *@
@model DanGame.Models.PageListViewModel
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@{
	ViewData["Title"] = "Index";
	var parser = new DanGame.Helpers.HtmlParser();


}
<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link href="~/css/Forum.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/PagedList.css" />
	<script src="~/js/jquery-dateformat.min.js"></script>
	<script src="https://kit.fontawesome.com/b5dde33e16.js" crossorigin="anonymous"></script>
	@* 	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
	integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> *@
</head>
<style>



	#navbarCa {
		overflow: hidden;
		
	}

	.sticky {
		position: fixed;
		top: 0;
		border-radius:10px;
		background-color:lightpink;
		
	}

		.sticky {
			padding-top: 60px;
		}
		.sticky a{
			color:ghostwhite;
		}

</style>

<body>
	<div class="wrapper">

		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
		<div><span class="dot"></span></div>
	</div>
	<div>


		<div class="m-1 mt-5 pt-5 container m-auto ">
			<div class="d-flex">
				<div class="m-1 w-100 rounded">
					<div class="p-1">
						<div class="d-flex justify-content-around w-25 m-auto">
							@Html.PagedListPager(Model.ArticleList, page => Url.Action("Index", new { page }))

						</div>
						<div class="mb-3 " id="navbarCa">
							<a href="@Url.Action("Index", new { category = "全部主題" })" class="btn clcategory">全部主題</a>
							<a href="@Url.Action("Index", new { category = "綜合討論" })" class="btn ms-2 clcategory">綜合討論</a>
							<a href="@Url.Action("Index", new { category = "資訊快報" })" class="btn ms-2 clcategory">資訊快報</a>
							<a href="@Url.Action("Index", new { category = "心得攻略" })" class="btn ms-2 clcategory">心得攻略</a>
							<a href="@Url.Action("Index", new { category = "實況專區" })" class="btn ms-2 clcategory">實況專區</a>
						</div>
						<hr />
					</div>



					@foreach (var item in Model.ArticleList)
					{
						var concatenatedContent = parser.ConcatenateParagraphContents(item.ArticalContent);
						<div class="bg-light bg-opacity-75 p-4 arbg">
							<!-- 第一行 -->
							<div class="mb-3">
								<a asp-action="ForumUser" asp-controller="Forum" asp-route-id="@item.User.UserId" class="text-decoration-none">
									<img src="@item.User.UserProfile.ProfilePictureUrl" class="rounded-circle" style="width:30px;height:30px;object-fit:cover;">

									<span class="text-black-50">@item.User.UserName</span>
								</a>
							</div>
							<!-- 第二行 -->
							<a asp-action="Artical" asp-route-id="@item.ArticalId" class="d-flex text-decoration-none">
								<div class="row">

									<!-- 文章標題 -->
									<div class="me-4 col">

										<div class="h4 arTitle">@item.ArticalTitle</div>
										<div class="text-secondary articalcontent two-lines">
											<p>@Html.Raw(concatenatedContent)</p>
										</div>


										<div class="mt-4 row">
											<div class="ArticalCreateDate col-2 text-secondary" timestramp="@(((DateTimeOffset)item.ArticalCreateDate).ToUnixTimeSeconds()*1000)" style=" font-size:small;"></div>
											<div class="col text-secondary" style=" font-size:small;"><i class="fa-solid fa-eye me-1"></i><span>@item.ArticalViews.Count</span></div>
											<div class="col text-secondary" style=" font-size:small;"><i class="fa-solid fa-message me-1"></i><span>@item.ArticalComments.Count</span></div>
											<div class="col-8"></div>

										</div>
									</div>
									<!-- 封面 -->
									<div class="col-2">
										<img src="data:image;base64,@Convert.ToBase64String(item.ArticalCoverPhoto)"
											 alt="" style="width:150px;height: 90px; object-fit: cover;" class="rounded">

									</div>
								</div>
							</a>
						</div>


						<hr>
					}


					<div class="d-flex justify-content-around w-25 m-auto">
						@Html.PagedListPager(Model.ArticleList, page => Url.Action("Index", new { page }))
					</div>

				</div>

				@* 搜尋文章 *@
				<div class="m-1 p-1" id="rightside">
					<div class="p-3 ">
						<form asp-action="Search" method="get" asp-controller="Forum">
							<div class="custom-search">
								<input type="search" name="searchTerm" class="custom-search-input" placeholder="搜尋文章">
								<div class="custom-search-botton">
									
									<i class="fa-solid fa-magnifying-glass align-middle"></i> 
								</div>
								
							</div>
						</form>

					</div>
					<div class="mt-1  p-3 rounded ">
						<div class="list-group">
							<a href="/Forum/Post" class="btn btn-light">快來發文吧!</a>
						</div>

					</div>
					<div class="mt-1  p-3 rounded ">
						<div class="list-group">
							<a href="/Forum/ForumUserPersonal" class="btn btn-light">個人主頁</a>
						</div>
					</div>
					<div class="mt-1  p-3 rounded ">
						<div class="card">
							<div class="card-header">
								<div>近期活躍達人</div>
							</div>
							<ul class="list-group list-group-flush">
								@foreach (var user in Model.TopUsers)
								{
									<li class="list-group-item d-flex">
										<div>
											<a asp-action="ForumUser" asp-controller="Forum" asp-route-id="@user.UserId" class="text-decoration-none">
												<img src="@user.ProfilePictureUrl" class="rounded-circle" style="width:40px;height:40px;object-fit:cover;">
											</a>
										</div>

										<div>
											<a asp-action="ForumUser" asp-controller="Forum" asp-route-id="@user.UserId" class="text-decoration-none">
												<span class="text-black-50">
													@user.UserName

												</span>
											</a>
											<p style="font-size:x-small">最近發表@(user.ArticleCount)篇文章</p>
										</div>




									</li>
								}

								@* 	<li class="list-group-item">A second item</li>
								<li class="list-group-item">A third item</li> *@
							</ul>
						</div>
					</div>
					<div class="mt-1  p-3 rounded ">
						<div class="card">
							<div class="card-header">
								熱門推薦文章
							</div>
							<ul class="list-group list-group-flush">
								@foreach (var popular in Model.PopularArticle)
								{
									<li class="list-group-item">
										@{
											string word = popular.ArticalTitle;
											string result = word.Length > 15 ? (word.Substring(0, 15) + "..") : word;
										}
										<a asp-action="Artical" asp-controller="Forum" asp-route-id="@popular.ArticalID" class="text-decoration-none" style="font-size:small">
											@result
										</a>

									</li>
								}


							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>




	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
	<script>
		$(document).ready(function () {
			$("oembed").each(function () {
				var url = $(this).attr("url");
				if (url.includes("youtube.com")) {
					var videoId = url.split("v=")[1];
					var embedUrl = "https://www.youtube.com/embed/" + videoId;
					$(this).replaceWith('<iframe width="560" height="315" src="' + embedUrl + '" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>');
				}
			});
			$(".ArticalCreateDate").each(function () {
				let time = new Date(Number($(this).attr("timestramp")));
				$(this).html(DateFormat.format.prettyDate(time));
			})
		});

		// 取得所有具有 editTime class 的元素
		const editTimeElements = document.getElementsByClassName('editTime');

		// 對每個元素進行編輯時間格式化
		Array.from(editTimeElements).forEach((element) => {
			const editTimeValue = element.textContent.trim();
			const formattedEditTime = formatEditTime(editTimeValue);
			element.textContent = formattedEditTime;
		});

		function formatEditTime(editTime) {
			const now = new Date();
			const editDate = new Date(editTime);
			const diff = Math.abs(now - editDate);

			const minutes = Math.floor(diff / (1000 * 60));
			const hours = Math.floor(diff / (1000 * 60 * 60));
			const days = Math.floor(diff / (1000 * 60 * 60 * 24));

			if (days > 0) {
				return days + " 天前";
			} else if (hours > 0) {
				return hours + " 小時前";
			} else {
				return minutes + " 分鐘前";
			}
		}

		window.onscroll = function () { myFunction() };

		// Get the navbar
		var navbar = document.getElementById("navbarCa");
		var rightside = document.getElementById("rightside");
		// Get the offset position of the navbar
		var sticky = navbar.offsetTop;

		// Add the sticky class to the navbar when you reach its scroll position. Remove "sticky" when you leave the scroll position
		function myFunction() {
			if (window.pageYOffset >= sticky) {
				navbar.classList.add("sticky");
				rightside.classList.add("stickyOne");
			} else {
				navbar.classList.remove("sticky");
				rightside.classList.remove
			}
		}
	</script>

</body>