@{
    var paymentSuccess = ViewBag.PaymentSuccess != null && (bool)ViewBag.PaymentSuccess;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
</head>
<body>
    <h1>結帳成功</h1>
</body>
</html>
@if (paymentSuccess)
{
        <script type="text/javascript">
            window.onload = function() {
                window.location.href = '@Url.Action("PaymentSuccess", "ShoppingCart")';
            };
        </script>
}
else
{
        <script type="text/javascript">
            window.onload = function() {
                window.location.href = '@Url.Action("PaymentFailure", "ShoppingCart")';
            };
        </script>
}
